@{
    ViewBag.Title = "Home";
}

<!-- Include Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pap6L/1+6g2Sh6s+4U5HEbZxWxKepXwT5Qd1mDdfVqkUi6E4xUCBm2CmM+ClcxgCkd2SX9X/5cAtW9kF2qRVag==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea, #764ba2); /* Faded gradient */
        color: white;
        padding: 150px 40px 120px;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.15); /* Soft overlay for contrast */
            z-index: 1;
        }

        .hero-section .container {
            position: relative;
            z-index: 2;
            max-width: 1100px;
        }

    .hero-title {
        font-size: 4.5rem;
        font-weight: 900;
        margin-bottom: 25px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .hero-subtitle {
        font-size: 1.6rem;
        font-weight: 300;
        margin-bottom: 40px;
        color: rgba(255,255,255,0.95);
    }

    .btn-gradient {
        background: white;
        color: #667eea;
        padding: 18px 45px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        border: none;
        text-decoration: none;
        display: inline-block;
        transition: all 0.4s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-right: 15px;
    }

        .btn-gradient:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

    .btn-outline {
        background: transparent;
        color: white;
        padding: 18px 45px;
        border-radius: 50px;
        font-weight: 700;
        border: 3px solid white;
        text-decoration: none;
        display: inline-block;
        transition: all 0.4s ease;
        margin-right: 15px;
        text-transform: uppercase;
    }

        .btn-outline:hover {
            background: white;
            color: #667eea;
            transform: translateY(-5px);
        }

    /* Footer Styles */
    footer {
        background: #1a202c;
        color: white;
        padding: 50px 20px;
        text-align: center;
    }

    .footer-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 25px;
        margin-bottom: 20px;
    }

        .social-links a {
            color: white;
            font-size: 1.5rem;
            transition: transform 0.3s, color 0.3s;
        }

            .social-links a:hover {
                color: #667eea;
                transform: translateY(-5px);
            }

    .footer-copy {
        font-size: 0.95rem;
        color: #a0aec0;
    }
</style>

<div class="hero-section">
    <div class="container text-center">
        <h1 class="hero-title">Hi,<br /> I'm Atul Prajapati</h1>
        <p class="hero-subtitle">
            Aspiring Full-Stack Developer | ASP.NET Specialist | Problem Solver
        </p>
        <p class="hero-subtitle">
            <strong>I am passionate about building modern, responsive, and user-friendly web applications. With expertise in ASP.NET, C#, and full-stack development, I enjoy turning ideas into functional digital experiences.</strong>
        </p>

        <div style="margin-top:40px;">
            <a href="@Url.Action("Projects","Home")" class="btn-gradient">View My Projects</a>
            <a href="https://drive.google.com/file/d/1lEV3mYXQ6mv6w95CtLt7Bu9jduh0E3cb/view?usp=drive_link" target="_blank" class="btn-outline">Resume</a>
            <a href="@Url.Action("Contact","Home")" class="btn-outline">Get In Touch</a>
        </div>
    </div>
</div>
